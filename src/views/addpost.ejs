    const onChangeHandler = () => {
        const input = document.getElementById('files');
        const label = document.querySelector('.custom-label');
        const art = document.getElementById('myArticle');
        const thisSpan = document.getElementById('thiSpan');

        const imagesContainer = document.createElement('div'); // Create a container for images
        imagesContainer.classList.add('images-container');

        Array.from(input.files).forEach(file => {
            const image = document.createElement('img'); // Create an image element for each file
            image.src = URL.createObjectURL(file);
            image.classList.add('uploaded-image');
            imagesContainer.appendChild(image); // Append the image to the container
        });

        thisSpan.innerHTML = ''; // Clear any previously displayed images
        thisSpan.appendChild(imagesContainer); // Append the container to the span

        label.innerHTML = "Your Selected Images...";

        art.style.height = "auto"; // Adjust article height to accommodate multiple images
    }

</script>

